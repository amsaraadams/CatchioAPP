<div class="card" style="width: 1000000px;"> 
  <div class="card-header">
    <h2 class="h6 text-uppercase mb-0">NUMBER OF CRIME IN LOS ANGELOS PER AREA</h2>
  </div>
 <div class="card-body" >
    <div id="crimeMap"></div>
 </div>
</div>

<p id='count' hidden><%=d['count']%></p>
<p id='area' hidden><%=d['area']%></p>
<p id='lat' hidden><%=d['lat']%></p>
<p id='lon' hidden><%=d['lon']%></p>
<script>

var numbers=new Array();
var lat=new Array();
var lon=new Array();
var ar=new Array();

                num=document.getElementById('count').innerHTML.split(",");
                latE=document.getElementById('lat').innerHTML.split(",");
                lonE=document.getElementById('lon').innerHTML.split(",");
                area=document.getElementById('area').innerHTML.split(",");
                num.forEach(n=>numbers.push(Number(n)));
                latE.forEach(n=>lat.push(n));
                lonE.forEach(n=>lon.push(n));
                area.forEach(n=>ar.push(n));


  const mymap = L.map('crimeMap').setView([34.052235, -118.243683], 12);
  const attribution ='&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors';
  const tileUrl = "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png";
  const tiles = L.tileLayer(tileUrl, { attribution });
  tiles.addTo(mymap);
  for (i = 0; i < lat.length; i++) {
    var circle = L.circle([lat[i], lon[i]], {
    color: 'red',
    fillColor: '#f03',
    fillOpacity: 0.5,
    radius: numbers[i]/50
}).addTo(mymap);

const marker = L.marker([lat[i], lon[i]]).addTo(mymap);
marker.bindPopup("<h4>"+ar[i]+" : "+numbers[i]+"</h4>").openPopup();
}


</script>

