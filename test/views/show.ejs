             <form id="form_Create" method="get" action="/reports" id="category-form">
              <div class="col-lg-12 mb-5">
                <div class="card">
                  <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Show Report N <%=id[0].DR_Number%> </h3>
                  </div>
                  <div class="card-body">
                    <form class="form-horizontal">
                      <div class="form-group row">
                        <label class="col-md-3 form-control-label">DR_Number</label>
                        <div class="col-md-9">
                          <input type="number" readonly="true" name="DR_Number" value="<%=id[0].DR_Number%>" class="form-control">
                        </div>
                      </div>
                      <div class="line"></div>
                      <div class="form-group row">
                        <label class="col-md-3 form-control-label">Date_Reported</label>
                        <div class="col-md-9">

                          <input type="date"  readonly="true" value="<%=new Date(id[0].Date_Reported).toISOString().slice(0,10)%>" class="form-control" name="Date_Reported">
                        </div>
                      </div>
                      <div class="line"></div>
                      <div class="form-group row">
                        <label class="col-md-3 form-control-label">Date_Occurred</label>
                        <div class="col-md-9">
                          <input type="date"  readonly="true" value="<%=new Date(id[0].Date_Reported).toISOString().slice(0,10)%>" name="Date_Occurred" class="form-control">
                        </div>
                      </div>
                      <div class="line"></div>
                      <div class="form-group row">
                        <label class="col-md-3 form-control-label">Time_Occurred</label>
                        <div class="col-md-4">
                          <input type="number" readonly="true" value="<%=id[0].Time_Occurred%>" name="Time_Occurred" class="form-control"> <br>

                        </div>
                      </div>
                      <div class="line"></div>
                       <div class="form-group row">
                        <label class="col-md-3 form-control-label">Victim age</label>
                        <div class="col-md-4">
                          <input type="number" readonly="true" value="<%=id[0].Victim_Age%>" name="Victim_age"  class="form-control"> <br>
                        </div>
                      </div>
                       <div class="line"></div>
                    <div class="form-group row">
                        <label class="col-md-3 form-control-label">Victim_Sex <br><small class="text-primary"></small></label>
                        <div class="col-md-9">
                          <input type="text" readonly="true" value="<%=id[0].valeur%>" name="Victim_age"  class="form-control"> <br>
                        </div>
                      </div>
                      <div class="line"></div>
                      <div class="form-group row">
                        <label class="col-md-3 form-control-label"> the status</label>
                        <div class="col-md-9">
                          <input type="text" name="Date_Occurred" class="form-control" readonly="true" value="<%=id[0].Status_Description%>">
                        </div>
                      </div>
                      <div class="line"></div>
                      <div class="form-group row">
                        <label class="col-md-3 form-control-label"> the type of crime</label>
                        <div class="col-md-9 ">
                          <input type="text" name="Date_Occurred" class="form-control" readonly="true" value="<%=id[0].Crime_Code_Description%>">
                        </div>
                      </div>
                      <div class="line"></div>
                       <div class="form-group row">
                        <label class="col-md-3 form-control-label"> the weapon used </label>
                        <div class="col-md-9 ">
                         <input type="text" name="Date_Occurred" class="form-control" readonly="true" value="<%=id[0].Weapon_Description%>">
                        </div>
                      </div>
                      <div class="line"></div>
                      <div class="form-group row">
                        <label class="col-md-3 form-control-label"> the Premise</label>
                        <div class="col-md-9 ">
                          <input type="text" name="Date_Occurred" class="form-control" readonly="true" value="<%=id[0].Premise_Description%>">
                        </div>
                      </div>
                      <div class="line"></div>
                        <div class="form-group row">
                        <label class="col-md-3 form-control-label">the coordinate of the location of the crime  </label>
