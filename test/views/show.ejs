                           <input type=number step=0.001 name="lat"  value="<%=id[0].lat%>" placeholder="2,38787"class="form-control" readonly="true">
                        </div>
                        <div class="col-md-4">

                           <input type=number step=0.001 name="lng" value="<%=id[0].lng%>" placeholder="103,3967"class="form-control" readonly="true">
                        </div>
                      </div>
                      <div class="line"></div>
                      <div class="form-group row">
                        <label class="col-md-3 form-control-label"> the Area</label>
                        <div class="col-md-9 ">
                          <input type="text" name="Date_Occurred" class="form-control" readonly="true" value="<%=id[0].Area_Name%>">
