                <div class="card">
                  <div class="card-header">
                    <h6 class="text-uppercase mb-0">Crime Report</h6>
                  </div>
                   <% if ( typeof(Message) !== 'undefined' && Message!=='nothing'){%>
                      <% if (Message=='The_report_deleted_successfully' ) {%>
                      <div class="danger"  >
                        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                        <%=Message%>
                        </div> <%}else{%>
                        <div class="alert"  >
                        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                        <%=Message%>
                        </div> 
                        <%}%>
                    <%}%>
                  <div class="card-body">                           
                    <table class="table table-striped table-hover card-text">
                      <thead>

                          <th>#</th>
                            <th>Date Reported</th>
                            <th>Crime Description</th>
                            <th>Weapon Description</th>
                            <th>Premise Description</th>
                            <th>Status Description</th>
                            <th>Area Name</th>
                            <th> Report Actions  </th>
                        </tr>
                      </thead>
                      <tbody>
                         <% if (typeof(result) !== 'undefined') {
                        result.forEach(function(item){  %>
                        <tr>
                          <th scope="row"><%=item.DR_Number%></th>
                          <td background="green"><%=item.year_Reported%></td>
                          <td><%=item.Crime_Code_Description%></td>
                          <td><%=item.Weapon_Description%></td>
                          <td><%=item.Premise_Description%></td>
                          <td><%=item.Status_Description%></td>
                          <td><%=item.Area_Name%>
                          <td>
                            <a href="/show/<%=item.DR_Number%>">
                              <span class="fa fa-eye"  aria-hidden="true" ></span>                          
                            </a>
                            <a href="/update/<%=item.DR_Number%>">
                              <span class="glyphicon glyphicon-pencil "></span>
                            </a href="">
                            <a class="glyphicon glyphicon-trash <%=item.DR_Number%>" href="/delete/<%=item.DR_Number%>" id="<%=item.DR_Number%>">
                            </a>
                            
                            </tr>                          
                            <%});
                            }%>
                      </tbody>
                    </table>
                   <% var  y=number[0].number;var t=parseInt(y)/30; var i;
